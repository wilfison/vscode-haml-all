{
  "comments": {
    "lineComment": "-#",
    "blockComment": ["-#", ""]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["`", "`"],
    {
      "open": "'",
      "close": "'",
      "notIn": ["string", "comment"]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"]
  ],
  "onEnterRules": [
    {
      "beforeText": {
        "pattern": "^\\s*[%\\.#-=][\\w\\s][\\w\\d\\-\\|]*[^>]*[^\\)]$",
        "flags": "i"
      },
      "action": {
        "indent": "indent"
      }
    }
  ]
}
