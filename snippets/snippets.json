{
  "if": {
    "prefix": "- if",
    "description": "Multiline if statement",
    "body": [
      "- if ${1:condition}",
      "  $0"
    ]
  },
  "else": {
    "prefix": "- else",
    "description": "Multiline else statement",
    "body": [
      "- else",
      "  $0"
    ]
  },
  "elsif": {
    "prefix": "- elsif",
    "description": "Multiline elsif statement",
    "body": [
      "- elsif ${1:condition}",
      "  $0"
    ]
  },
  "unless": {
    "prefix": "- unless",
    "description": "Multiline unless statement",
    "body": [
      "- unless ${1:condition}",
      "  $0"
    ]
  },
  "each": {
    "prefix": "each",
    "description": "Iterate over a collection",
    "body": [
      "- ${1:${TM_DIRECTORY/.+\\/(.*)$/$1/}}.each do |${2:${TM_DIRECTORY/.+\\/(.*)\\w$/$1/}}|",
      "  $0"
    ]
  },
  "HTML5": {
    "prefix": "!html5",
    "description": "HTML5 Boilerplate",
    "body": [
      "!!!",
      "%html{lang: '${1:en}'}",
      "  %head",
      "    %meta{content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type'}/",
      "    %meta{charset: 'UTF-8'}/",
      "    %meta{content: 'IE=edge', 'http-equiv': 'X-UA-Compatible'}/",
      "    %meta{content: 'width=device-width, initial-scale=1.0', name: 'viewport'}/",
      "",
      "    %title ${2:Title}",
      "",
      "  %body",
      "    ${3:= yield}",
      "$0"
    ]
  },
  "Filter: JavaScript": {
    "prefix": ":javascript",
    "description": "Inline JavaScript Filter Tag",
    "body": [
      ":javascript",
      "  $1"
    ]
  },
  "Filter: CSS": {
    "prefix": ":css",
    "description": "Inline CSS Filter Tag",
    "body": [
      ":css",
      "  $1"
    ]
  },
  "Filter: Ruby": {
    "prefix": ":ruby",
    "description": "Inline Ruby Filter Block",
    "body": [
      ":ruby",
      "  $1"
    ]
  }
}
